<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Color.PrimaryBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="Color.SecondaryBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Color.HeaderBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Color.Text" Color="#000000"/>
    <SolidColorBrush x:Key="Color.SubText" Color="#444444"/>
    <SolidColorBrush x:Key="Color.Border" Color="#C8C8C8"/>
    <SolidColorBrush x:Key="Color.GridLine" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="Color.Selection" Color="#D0E7FF"/>
    <SolidColorBrush x:Key="Color.TableHeaderBackground" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="Color.TableHeaderText" Color="#000000"/>

    <RadialGradientBrush x:Key="SplitterBackground">
        <GradientStop Color="#FF767676" Offset="0.5"/>
        <GradientStop Color="Transparent"/>
        <GradientStop Color="Transparent" Offset="1"/>
    </RadialGradientBrush>

    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{DynamicResource Color.SecondaryBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Color.Border}"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource Color.GridLine}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource Color.GridLine}"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{DynamicResource Color.TableHeaderBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.TableHeaderText}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Color.Border}"/>
    </Style>

    <Style TargetType="DataGridRow">
        <Setter Property="Background" Value="{DynamicResource Color.SecondaryBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource Color.Selection}"/>
                <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="DataGridCell">
        <Setter Property="Background" Value="{DynamicResource Color.SecondaryBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Color.Border}"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource Color.Selection}"/>
                <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource Color.SecondaryBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Color.Text}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Color.Border}"/>
        <Setter Property="CaretBrush" Value="{DynamicResource Color.Text}"/>
        <Setter Property="SelectionBrush" Value="{DynamicResource Color.Selection}"/>
    </Style>
</ResourceDictionary>