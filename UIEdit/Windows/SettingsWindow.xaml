<Window x:Class="UIEdit.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paths" Height="145" Width="560" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource Color.SecondaryBackground}" Foreground="{DynamicResource Color.Text}">
    <Grid Margin="10" Background="{DynamicResource Color.SecondaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Row="0" Grid.Column="0" Width="20" Height="20" Margin="0,0,6,0">
            <Canvas Width="24" Height="24">
                <Path Fill="#444" Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"/>
            </Canvas>
        </Viewbox>
        <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="4,0" Text="Interfaces:"/>
        <TextBox x:Name="TxtInterfaces" Grid.Row="0" Grid.Column="2" Margin="6,0" Background="{DynamicResource Color.SecondaryBackground}" Foreground="{DynamicResource Color.Text}"/>
        <Button Grid.Row="0" Grid.Column="3" Content="..." Padding="6,2" Click="OnBrowseInterfaces"/>

        <Viewbox Grid.Row="1" Grid.Column="0" Width="20" Height="20" Margin="0,6,6,0">
            <Canvas Width="24" Height="24">
                <Path Fill="#444" Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"/>
            </Canvas>
        </Viewbox>
        <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="4,6,4,0" Text="Surfaces:"/>
        <TextBox x:Name="TxtSurfaces" Grid.Row="1" Grid.Column="2" Margin="6,6,6,0" Background="{DynamicResource Color.SecondaryBackground}" Foreground="{DynamicResource Color.Text}"/>
        <Button Grid.Row="1" Grid.Column="3" Content="..." Padding="6,2" Margin="0,6,0,0" Click="OnBrowseSurfaces"/>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0"/>
        <Button Content="OK" Margin="262,10,75,-18" IsDefault="True" Click="OnOk" Grid.Column="2" Grid.Row="2" Background="{DynamicResource Color.SecondaryBackground}" Foreground="{DynamicResource Color.Text}"/>
        <Button Content="Cancel" IsCancel="True" Grid.Column="2" Grid.ColumnSpan="2" Margin="360,10,0,-18" Grid.Row="2" Background="{DynamicResource Color.SecondaryBackground}" Foreground="{DynamicResource Color.Text}"/>
    </Grid>
</Window>

